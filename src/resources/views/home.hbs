    function handleClickCard() {
        const cardElements = document.querySelectorAll('.card')
        {{!-- console.log(cardElements) --}}
        cardElements.forEach(card=>{
            card.onclick = ()=>{
                const titleCourse = toLowerCaseNonAccentVietnamese(card.querySelector('.card-title').innerText.replace(/ /g,'-').trim())
                const idCourse = card.querySelector('.course-id').innerText
                window.location.replace(window.location.href + 'course/'+ titleCourse + '?id=' + idCourse);
            }
        })
    }   
